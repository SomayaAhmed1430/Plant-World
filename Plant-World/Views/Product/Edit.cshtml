@model Plant_World.ViewModels.ProductFormViewModel

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Edit Product";
}

<h2 class="mb-4">Edit Product</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Product.Id" />

    <!-- Product Name -->
    <div class="form-group mb-3">
        <label asp-for="Product.Name" class="form-label"></label>
        <input asp-for="Product.Name" class="form-control" placeholder="Enter product name" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>

    <!-- Description -->
    <div class="form-group mb-3">
        <label asp-for="Product.Description" class="form-label"></label>
        <textarea asp-for="Product.Description" class="form-control" placeholder="Enter product description"></textarea>
        <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>

    <!-- Price -->
    <div class="form-group mb-3">
        <label asp-for="Product.Price" class="form-label"></label>
        <input asp-for="Product.Price" class="form-control" placeholder="Enter price" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>

    <!-- Category Dropdown -->
    <div class="form-group mb-3">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories, "Id", "Name", Model.CategoryId))">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <!-- Current Image -->
    @if (!string.IsNullOrEmpty(Model.Product.MainImageUrl))
    {
        <div class="mb-3">
            <label class="form-label">Current Image:</label><br />
            <img id="currentImg" src="@Model.Product.MainImageUrl" alt="Current Image" style="max-width: 250px; border:1px solid #ccc; border-radius:8px;" />
        </div>
    }

    <!-- Upload New Image -->
    <div class="form-group mb-3">
        <label for="mainImageFile" class="form-label">Upload New Image</label>
        <input type="file" id="mainImageFile" name="mainImageFile" class="form-control" accept="image/*" />
    </div>

    <!-- Preview -->
    <div class="mb-3">
        <label class="form-label">Preview:</label><br />
        <img id="preview" src="" alt="Image Preview" style="max-width: 250px; display:none; border:1px solid #ccc; border-radius:8px;" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const fileInput = document.getElementById('mainImageFile');
        const preview = document.getElementById('preview');
        const currentImg = document.getElementById('currentImg');

        fileInput.addEventListener('change', function (e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (event) {
                    preview.src = event.target.result;
                    preview.style.display = 'block';
                    if (currentImg) currentImg.style.opacity = '0.4';
                }
                reader.readAsDataURL(file);
            } else {
                preview.src = '';
                preview.style.display = 'none';
                if (currentImg) currentImg.style.opacity = '1';
            }
        });
    </script>
}
