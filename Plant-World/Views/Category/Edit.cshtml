@model Plant_World.Models.Category

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Edit Category";
}

<h2 class="mb-4">Edit Category</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Category Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter category name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" placeholder="Enter category description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="imageFile" class="form-label">Upload New Image (Optional)</label>
        <input type="file" id="imageFile" name="imageFile" class="form-control" accept="image/*" />
    </div>

    <div class="mb-3">
        <label class="form-label">Current Image:</label><br />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Current Image"
                 style="max-width: 250px; border:1px solid #ccc; border-radius:8px;" id="currentImg" />
        }
        else
        {
            <p class="text-muted">No image uploaded.</p>
        }
    </div>

    <div class="mb-3">
        <label class="form-label">Preview (New Image):</label><br />
        <img id="preview" src="" alt="Image Preview"
             style="max-width: 250px; display:none; border:1px solid #ccc; border-radius:8px;" />
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // عرض البريفيو قبل الحفظ
        const fileInput = document.getElementById('imageFile');
        const preview = document.getElementById('preview');
        const currentImg = document.getElementById('currentImg');

        fileInput.addEventListener('change', function (e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (event) {
                    preview.src = event.target.result;
                    preview.style.display = 'block';
                    if (currentImg) currentImg.style.opacity = '0.3'; // تظليل الصورة القديمة
                }
                reader.readAsDataURL(file);
            } else {
                preview.src = '';
                preview.style.display = 'none';
                if (currentImg) currentImg.style.opacity = '1';
            }
        });
    </script>
}
